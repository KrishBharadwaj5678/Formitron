<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/show.css">
    <title>Read Form</title>
</head>
<body>

    <h2 class="main_head">Student Details</h2>

    <div class="details-parent">
        
       <% if(users.length>=1){ %>

            <% users.forEach((item)=>{ %>

                <div class="box">
                    <div class="image-container">
                        <img src=<%= item.Image %>>
                    </div>
        
                    <p class="info"><%= item.FirstName %> <%= item.LastName %></p>
                    <p class="info info2"><%= item.Email %></p>
        
                    <div class="btns">
                        <a href="/edit/<%= item._id %>"><button class="edit">Edit</button></a>
                        <a href="/delete/<%= item._id %>"><button class="delete">Delete</button></a>
                    </div>            
                </div>

            <% }) %>

       <% }else{ %>
        <h3 class="form-submitted">No Form Submitted Yet!</h3>
       <% } %>

    </div>
    
</body>
</html>